        <arguments>
          <argument>
            <kind>1</kind>
            <string>if (!ds_list_empty(selection))
{
    var targetId = collision_point(mouse_x, mouse_y, o_unit, false, false);
    if (targetId != noone)
    {
        if (targetId.side != global.playerside) // Targeted Enemy Unit
        {
            for (var i = 0; i &lt; ds_list_size(selection); i++)
            {
                var unitId = ds_list_find_value(selection, i);
                if (unitId.side == global.playerside)
                {
                    attackTarget(unitId, targetId);
                }
            }
        }
        else // Targeted Ally Unit
        {
            for (var i = 0; i &lt; ds_list_size(selection); i++)
            {
                var unitId = ds_list_find_value(selection, i);
                if (unitId.side == global.playerside)
                {
                    moveTo(unitId, mouse_x, mouse_y);
                    //TODO: Patrol? Guard ally?
                }
            }
        }
    }
    else // Targeted Location
    {
        // Use first unit as formation leader
        // TODO: possibly use unit priority? eg. Bigger units become leaders?
        // TODO: or even use centroid, but spread out groups may have less meaningful points
        var unitId = ds_list_find_value(selection, 0);
        if (unitId.side == global.playerside)
        {
            moveTo(unitId, mouse_x, mouse_y);
        }
        var centroid_x = unitId.x;
        var centroid_y = unitId.y;
        var group_direction = point_direction(centroid_x, centroid_y, mouse_x, mouse_y);
        var position = 2; // TODO: Combine with i below?
        // Now to order units to move to the left/right of the leading unit
        // Line Formation looks like
        //      3                    2
        //  1       -------------&gt;   1
        //    2                      3
        for (var i = 1; i &lt; ds_list_size(selection); i++)
        {
            var unitId = ds_list_find_value(selection, i);
            if (unitId.side == global.playerside)
            {
                if (position mod 2 == 1) 
                {
                    var right_position = (position - 1)/2;
                    var right_direction = group_direction - separation_angle;
                    var right_x = mouse_x + unit_separation * right_position * cos(degtorad(right_direction));
                    var right_y = mouse_y - unit_separation * right_position * sin(degtorad(right_direction));
                    // TODO: Use unit specific separations? may look weird if not homogenous though
                    moveTo(unitId, right_x, right_y);
                } 
                else 
                {
                    var left_position = position/2;
                    var left_direction = group_direction + separation_angle;
                    var left_x = mouse_x + unit_separation * left_position * cos(degtorad(left_direction));
                    var left_y = mouse_y - unit_separation * left_position * sin(degtorad(left_direction));
                    trace(left_direction, degtorad(left_direction), cos(degtorad(left_direction)));
trace(mouse_x, mouse_y, left_x, left_y);
                    // TODO: Use unit specific separations? may look weird if not homogenous though
                    moveTo(unitId, left_x, left_y);
                }
            }
            position++;
        }
    }
}
</string>
